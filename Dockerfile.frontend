FROM node:22-alpine

ARG NEXT_PUBLIC_SEARCH_BACKEND_URL
ARG NEXT_PUBLIC_CHAT_BACKEND_URL
ARG NODE_ENV=dev

ENV NEXT_PUBLIC_SEARCH_BACKEND_URL=$NEXT_PUBLIC_SEARCH_BACKEND_URL
ENV NEXT_PUBLIC_CHAT_BACKEND_URL=$NEXT_PUBLIC_CHAT_BACKEND_URL
ENV NODE_ENV=$NODE_ENV

WORKDIR /app
COPY src/package*.json ./
RUN npm install --legacy-peer-deps
COPY src/ ./

ENV PORT=8080

RUN npm run build

EXPOSE 8080
CMD ["npm", "run", "start"]